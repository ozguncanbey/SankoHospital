<!-- Patient Information Header -->
<div class="card mb-4">
    <div class="card-body">
        <h4>@Model.PatientInfo.Name @Model.PatientInfo.Surname</h4>
        <p>
            <strong>ID:</strong> @Model.PatientInfo.Id &nbsp;|&nbsp;
            <strong>Kan Grubu:</strong> @Model.PatientInfo.BloodType
            <!-- You can add more patient info here if needed -->
        </p>
    </div>
</div>

<!-- Records Table -->
<table class="table table-hover">
    <thead>
    <tr>
        <th>ID</th>
        <th>Kayıt Tarihi</th>
        <th>Tansiyon</th>
        <th>Nabız</th>
        <th>Kan Şekeri</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var record in Model.Records)
    {
        <tr>
            <td>@record.Id</td>
            <td>@record.RecordDate.ToString("yyyy-MM-dd")</td>
            <td>@record.BloodPressure</td>
            <td>@record.Pulse</td>
            <td>@record.BloodSugar</td>
        </tr>
    }
    </tbody>
</table>