@model SankoHospital.MvcWebUI.Models.CleanerModel.CleanerDashboardViewModel

@{
Layout = "~/Views/Shared/_Layout.cshtml";
ViewData["Title"] = "Cleaner Dashboard";
}

@section PageStyles {
<style>
    .welcome-message {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 2rem;
        text-align: center;
    }
    .stats-container {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }
    .stat-card {
        flex: 1 1 250px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        padding: 1rem;
        text-align: center;
        transition: transform 0.2s ease;
    }
    .stat-card:hover {
        transform: translateY(-5px);
    }
    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.6rem;
        margin: 0 auto 1rem auto;
    }
    .stat-number {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    .stat-label {
        color: #6c757d;
        font-size: 0.95rem;
        font-weight: 500;
    }
</style>
}

<div class="container mt-4">
    <div class="welcome-message">
        Welcome, Cleaner!
    </div>
    <div class="stats-container">
        <!-- Bugün Yapılacak Temizlik İşleri -->
        <div class="stat-card">
            <div class="stat-icon" style="background-color: #f8d7da; color: #721c24;">
                <i class="fas fa-broom"></i>
            </div>
            <div class="stat-number">@Model.TodaysCleaningTasks</div>
            <div class="stat-label">Today's Cleaning Tasks</div>
        </div>
        <!-- Tamamlanan İşler -->
        <div class="stat-card">
            <div class="stat-icon" style="background-color: #d4edda; color: #155724;">
                <i class="fas fa-check"></i>
            </div>
            <div class="stat-number">@Model.CompletedTasks</div>
            <div class="stat-label">Completed Tasks</div>
        </div>
        <!-- Bekleyen İşler -->
        <div class="stat-card">
            <div class="stat-icon" style="background-color: #fff3cd; color: #856404;">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="stat-number">@Model.PendingTasks</div>
            <div class="stat-label">Pending Tasks</div>
        </div>
        <!-- Atanmış Temizlik Alanları -->
        <div class="stat-card">
            <div class="stat-icon" style="background-color: #d1ecf1; color: #0c5460;">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="stat-number">@Model.AssignedAreas</div>
            <div class="stat-label">Assigned Areas</div>
        </div>
    </div>
</div>
