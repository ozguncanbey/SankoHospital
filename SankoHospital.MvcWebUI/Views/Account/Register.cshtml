@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SankoHospital.MvcWebUI.Models.AuthModels.RegisterViewModel

@{
Layout = "~/Views/Shared/_AuthLayout.cshtml";
ViewData["Title"] = "Kaydol";
}

@section PageStyles {
<style>
    body {
        min-height: 100vh;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: system-ui, -apple-system, sans-serif;
    }
    .auth-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 24px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        padding: 3rem;
        width: 100%;
        max-width: 420px;
        transform: translateY(0);
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }
    .auth-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.12);
    }
    .auth-header {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 1.5rem;
        letter-spacing: -0.5px;
    }
    .form-control {
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.2s ease;
        background: #f8fafc;
    }
    .form-control:focus {
        border-color: #2563eb;
        box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
        background: white;
    }
    .form-label {
        color: #475569;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }
    .custom-btn {
        background: #2563eb;
        border: none;
        border-radius: 12px;
        padding: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        color: white;
    }
    .custom-btn:hover {
        background: #1e40af;
        transform: translateY(-2px);
        color: white;
    }
    .custom-btn:active {
        transform: translateY(0);
    }
    .toggle-link {
        color: #2563eb;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.2s ease;
    }
    .toggle-link:hover {
        color: #1e40af;
        text-decoration: none;
    }
    .auth-text {
        color: #64748b;
        font-size: 0.95rem;
    }
    .validation-summary {
        background: #fee2e2;
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        color: #991b1b;
        font-size: 0.9rem;
        border-left: 4px solid #dc2626;
    }
    @@media screen and (max-width: 576px) {
        .auth-card {
            padding: 2rem;
            margin: 1rem;
            border-radius: 16px;
        }
        .auth-header {
            font-size: 1.75rem;
        }
    }
</style>
}

<div class="auth-card animate__animated animate__fadeIn">
    <h1 class="auth-header text-center">Sanko Hastanesi</h1>

    @if (!ViewData.ModelState.IsValid)
    {
    <div class="validation-summary">
        @Html.ValidationSummary()
    </div>
    }

    <form method="post" asp-action="Register" asp-controller="Account">
        <div class="mb-4">
            <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
            <input asp-for="Username" class="form-control" placeholder="Kullanıcı adı oluştur" autocomplete="username" />
        </div>
        <div class="mb-4">
            <label asp-for="Password" class="form-label">Şifre</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Şifre oluştur" autocomplete="new-password" />
        </div>
        <div class="mb-4">
            <label asp-for="ConfirmPassword" class="form-label">Şifreni Onayla</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifreni onayla" autocomplete="new-password" />
        </div>
        <button type="submit" class="btn custom-btn w-100 mb-4">
            Kaydol
        </button>
    </form>

    <div class="text-center auth-text">
        <span>Zaten kayıtlı mısın? </span>
        <a asp-controller="Account" asp-action="Login" class="toggle-link">
            Giriş Yap
        </a>
    </div>
</div>
