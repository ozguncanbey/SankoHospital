@model SankoHospital.MvcWebUI.Models.UserProfileViewModel

@{
Layout = "~/Views/Shared/_Layout.cshtml"; // Bu layout, _UserLayout veya _AdminLayout gibi de olabilir.
ViewData["Title"] = "Profile";
var userRole = Model.Role; // Model'den gelen rol bilgisi
}

<div class="container mt-4">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body text-center">
            <img src="~/img/default-profile.png" alt="Profile Photo" class="img-thumbnail rounded-circle mb-3" style="width: 120px; height: 120px;" />
            <h4 class="card-title">@Model.Username</h4>
            <p class="card-text"><strong>Role:</strong> @Model.Role</p>

            @* Ko≈üullu "Edit Profile" butonu *@
            @if (userRole == "Admin")
            {
            <a href="@Url.Action("EditProfile", "Admin")" class="btn btn-primary">Edit Admin Profile</a>
            }
            else if (userRole == "User")
            {
            <a href="@Url.Action("EditProfile", "Account")" class="btn btn-primary">Edit Profile</a>
            }
            else if (userRole == "Nurse")
            {
            <a href="@Url.Action("EditProfile", "Nurse")" class="btn btn-primary">Edit Nurse Profile</a>
            }
            else if (userRole == "Cleaner")
            {
            <a href="@Url.Action("EditProfile", "Cleaner")" class="btn btn-primary">Edit Cleaner Profile</a>
            }
            else if (userRole == "Receptionist")
            {
            <a href="@Url.Action("EditProfile", "Receptionist")" class="btn btn-primary">Edit Receptionist Profile</a>
            }
            else
            {
            <a href="@Url.Action("EditProfile", "Account")" class="btn btn-primary">Edit Profile</a>
            }
        </div>
    </div>
</div>
