@model SankoHospital.MvcWebUI.Models.ReceptionistModel.ReceptionistDashboardViewModel

@{
Layout = "~/Views/Shared/_Layout.cshtml";
ViewData["Title"] = "Receptionist Dashboard";
}

@section PageStyles {
<style>
    .welcome-message {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 2rem;
        text-align: center;
    }
    .stats-container {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }
    .stat-card {
        flex: 1 1 250px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        padding: 1rem;
        text-align: center;
        transition: transform 0.2s ease;
    }
    .stat-card:hover {
        transform: translateY(-5px);
    }
    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.6rem;
        margin: 0 auto 1rem auto;
    }
    .stat-number {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    .stat-label {
        color: #6c757d;
        font-size: 0.95rem;
        font-weight: 500;
    }
</style>
}

<div class="container mt-4">
    <div class="welcome-message">
        Welcome, Receptionist!
    </div>
    <div class="stats-container">
        <!-- Bugün Yapılan Randevular -->
        <div class="stat-card">
            <div class="stat-icon" style="background-color: #d1ecf1; color: #0c5460;">
                <i class="fas fa-calendar-check"></i>
            </div>
            <div class="stat-number">@Model.TodaysAppointments</div>
            <div class="stat-label">Today's Appointments</div>
        </div>
        <!-- Check-in Sayısı -->
        <div class="stat-card">
            <div class="stat-icon" style="background-color: #fff3cd; color: #856404;">
                <i class="fas fa-sign-in-alt"></i>
            </div>
            <div class="stat-number">@Model.CheckIns</div>
            <div class="stat-label">Check-Ins</div>
        </div>
        <!-- Bekleyen Hastalar -->
        <div class="stat-card">
            <div class="stat-icon" style="background-color: #f8d7da; color: #721c24;">
                <i class="fas fa-user-clock"></i>
            </div>
            <div class="stat-number">@Model.WaitingPatients</div>
            <div class="stat-label">Waiting Patients</div>
        </div>
        <!-- Toplam Kayıtlı Hastalar -->
        <div class="stat-card">
            <div class="stat-icon" style="background-color: #d4edda; color: #155724;">
                <i class="fas fa-user"></i>
            </div>
            <div class="stat-number">@Model.TotalPatients</div>
            <div class="stat-label">Total Registered Patients</div>
        </div>
    </div>
</div>
