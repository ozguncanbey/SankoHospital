@model SankoHospital.MvcWebUI.Models.ReceptionistModel.ReceptionistDashboardViewModel

@{
Layout = "~/Views/Shared/_Layout.cshtml";
ViewData["Title"] = "Resepsiyonist Paneli";
}

@section PageStyles {
<style>
    .welcome-message {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 2rem;
        text-align: center;
    }
    .stats-container {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }
    .stat-card {
        flex: 1 1 250px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        padding: 1rem;
        text-align: center;
        transition: transform 0.2s ease;
    }
    .stat-card:hover {
        transform: translateY(-5px);
    }
    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.6rem;
        margin: 0 auto 1rem auto;
    }
    .stat-number {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    .stat-label {
        color: #6c757d;
        font-size: 0.95rem;
        font-weight: 500;
    }
</style>
}

<div class="container mt-4">
    <div class="welcome-message">
        Hoş Geldin!
    </div>
    <div class="stats-container">
        <!-- Today's Admissions -->
        <div class="stat-card">
            <div class="stat-icon" style="background-color: #d1ecf1; color: #0c5460;">
                <i class="fas fa-user-plus"></i>
            </div>
            <div class="stat-number">@Model.TodaysAdmissions</div>
            <div class="stat-label">Bugünün Girişleri</div>
        </div>
        <!-- Today's Checkouts -->
        <div class="stat-card">
            <div class="stat-icon" style="background-color: #fff3cd; color: #856404;">
                <i class="fas fa-sign-out-alt"></i>
            </div>
            <div class="stat-number">@Model.TodaysCheckouts</div>
            <div class="stat-label">Bugünün Çıkışları</div>
        </div>
        <!-- Rooms Available (Boş ve temizlenmiş odalar) -->
        <div class="stat-card">
            <div class="stat-icon" style="background-color: #d4edda; color: #155724;">
                <i class="fas fa-bed"></i>
            </div>
            <div class="stat-number">@Model.RoomsAvailable</div>
            <div class="stat-label">Müsait Odalar</div>
        </div>
        <!-- Total Registered Patients -->
        <div class="stat-card">
            <div class="stat-icon" style="background-color: #f8d7da; color: #721c24;">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-number">@Model.TotalRegisteredPatients</div>
            <div class="stat-label">Kayıtlı Toplam Hasta</div>
        </div>
    </div>
</div>
