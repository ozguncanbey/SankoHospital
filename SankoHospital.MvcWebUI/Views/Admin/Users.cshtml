@model List<UserViewModel>

@{
Layout = "~/Views/Shared/_AdminLayout.cshtml";
ViewData["Title"] = "Admin - Users";
}

@section PageStyles {
<style>
    .admin-header {
        font-size: 1.8rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 1.5rem;
        letter-spacing: -0.5px;
    }
    .admin-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 24px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        padding: 2rem 3rem;
        width: 100%;
        transition: all 0.3s ease;
    }
    .admin-card:hover {
        transform: translateY(-5px);
    }
    .btn-assign {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        font-weight: 500;
        padding: 0.4rem 0.75rem;
    }
</style>
}

<div class="admin-card">
    <h2 class="admin-header">User List</h2>
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Role</th>
            <th style="width: 200px;">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.Id</td>
            <td>@user.Username</td>
            <td>@user.Role</td>
            <td>
                <div class="d-flex gap-3">
                    <a asp-action="AssignRole"
                       asp-route-userId="@user.Id"
                       class="btn btn-outline-primary btn-assign">
                        Assign Role
                    </a>
                    <a asp-action="DeleteUser"
                       asp-route-id="@user.Id"
                       class="btn btn-outline-danger btn-assign"
                       onclick="return confirm('Are you sure you want to delete @user.Username?');">
                        Delete
                    </a>
                </div>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>
