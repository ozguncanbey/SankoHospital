@model SankoHospital.MvcWebUI.Models.UserProfileViewModel

@{
Layout = "~/Views/Shared/_Layout.cshtml"; // Veya isteğe bağlı; _AdminLayout kullanılabilir
ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body text-center">
            <img src="~/img/default-profile.png" alt="Profile Photo" class="img-thumbnail rounded-circle mb-3" style="width: 120px; height: 120px;" />
            <h4 class="card-title">@Model.Username</h4>
            <p class="card-text"><strong>Role:</strong> @Model.Role</p>
            <a href="@Url.Action("EditProfile", "Admin")" class="btn btn-primary">Edit Profile</a>
        </div>
    </div>
</div>
